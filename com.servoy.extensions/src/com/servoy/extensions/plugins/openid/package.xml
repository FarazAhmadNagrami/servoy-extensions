<?xml version="1.0" encoding="UTF-8"?>
<mp:servoy-extension xmlns:mp="http://www.servoy.com/extension" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.servoy.com/extension http://www.servoy.com/schema/servoy-extension-1.xsd">
	<extension-id>com.servoy.openid</extension-id>
	<extension-name>OpenID Plugin</extension-name> 
	<version>6.1.0</version>
	<dependencies>
	    <servoy>
	       <min-version>6.1.0 rc1</min-version>
	    </servoy>
	    <lib>
        	<id>org.openid4java.discovery</id> <!-- most relevant package name in the jar file (no useful MANIFEST.MF listed id available here) -->
       		<path>application_server/plugins/openid/openid4java.jar</path>
      		<version>0.9.6</version>
       		<min-version>0.9.6</min-version>
    	</lib>
    	<lib>
        	<id>com.google.inject</id> <!-- "Bundle-SymbolicName" from MANIFEST.MF -->
       		<path>application_server/plugins/openid/guice-2.0.jar</path>
      		<version>2.0</version>
      		<min-version>2.0</min-version>
    	</lib>
	</dependencies>
	<info>
		<icon path="screenshots/openid.gif"/>
		<description>Plugin for using OpenID authentication.</description>
	</info>
	<requiresRestart/>
</mp:servoy-extension>