	<target name="check_jdk">
		<!--
				<fail message="Wrong jdk version detected. Version ${java.version} was detected whereas the project needs ${target.version}.">
					<condition>
						<not>
							<contains string="${java.version}" substring="${target.version}" />
						</not>
					</condition>
				</fail>
		-->
	</target>
	
	<target name="compile" depends="check_jdk,prepare" description="Compile entire j2db_plugins project">
		<javac verbose="${javacVerbose}" debug="${javacDebugInfo}" source="${bundleJavacSource}" target="${bundleJavacTarget}"
			srcdir="${src.dir}"
			destdir="${bin.dir}"
			encoding="ISO-8859-1"
			deprecation="off"
			classpathref="classpath"
			fork="yes"
		/>
	</target>

	<target name="clean" description="Delete all j2db_plugins' temporary files" unless="do_not_clean">
		<delete dir="${bin.dir}"/>
	</target>

